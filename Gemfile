# Authentication
gem 'twitter'
gem 'omniauth'
gem 'omniauth-twitter'

# Databases
gem 'neography'
gem 'redis'

# Jobs
gem 'sidekiq'
gem 'sidekiq-scheduler'
gem 'slim'
gem 'rufus-scheduler'

# Visuals
gem 'less'
gem 'therubyracer'
gem 'coffee-script'
gem 'uglifier'
gem 'haml'
gem 'rack-flash3'

# Others
gem 'foreman'
gem 'yajl-ruby'

